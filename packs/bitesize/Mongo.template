                "mongodb_replication_params:","\n",
                "- { host_name: ${MONGO_INSTANCE4}, host_port: 27017, host_type: replica }","\n",
                "EOF","\n",
                "pushd /root/aws; ansible-playbook -vv -i hosts.inventory -e \"region=",{ "Ref": "AWS::Region" },
