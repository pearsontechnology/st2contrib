                "\n",
                "hostname mongo4","\n",
                "sleep 60","\n",
                "echo \"\" > /root/.ssh/cluster_instances_key.b64w0","\n",
                "base64 -d /root/.ssh/cluster_instances_key.b64w0 > /root/.ssh/id_rsa && chmod 0600 /root/.ssh/id_rsa","\n",
